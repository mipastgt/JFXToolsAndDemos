<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>de.mpmediasoft.jfxtools</groupId>
		<artifactId>jfxtools</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>jfxtools-vlcjfx-demos</artifactId>

	<build>
		<plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>vlcjfx-demo1</id>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>de.mpmediasoft.jfxtools.vlcjfx.demo.VLCJFXVideoPlayerDemo1Launcher</mainClass>
                        </configuration>
                    </execution>
                    
                    <execution>
                        <id>vlcjfx-demo2</id>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>de.mpmediasoft.jfxtools.vlcjfx.demo.VLCJFXVideoPlayerDemo2Launcher</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>                                   
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>de.mpmediasoft.jfxtools</groupId>
			<artifactId>jfxtools-vlcjfx</artifactId>
			<version>${jfxtools.version}</version>
		</dependency>
	</dependencies>
</project>
